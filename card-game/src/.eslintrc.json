{
	"parser": "babel-eslint",
	"extends": [ "plugin:react/recommended" ],
		"plugins": [
			"react",
			"babel"
		],
	"env": { 
		"es6": true,
		"node": true
	},
	"parserOptions": {
		"sourceType": "module",
			"ecmaFeatures": {
			 "jsx": true
			}
		},
		"rules": {
			"react/jsx-uses-react": "error",
			"react/jsx-uses-vars": "error",
			"no-undef": 2,
			"no-unused-vars": 2,
			"babel/new-cap": 1,
			"babel/no-invalid-this": 1,
			"babel/semi": 1,
			"babel/no-unused-expressions": 1,
			"eqeqeq": 2,
			"no-useless-constructor": 2,
			"indent": [ "error", 4 ],
			"indent": [ "error", "tab" ],
			"quotes": [ "error", "single" ],
			"keyword-spacing": ["error", {
				"before": true,
				"after": true
			}],
			"arrow-spacing": [ "error", {
				"before": true,
				"after": true
			}],
			"comma-spacing": [ "error", {
				"before": false,
				"after": true
			}]
		}
}
	
 
